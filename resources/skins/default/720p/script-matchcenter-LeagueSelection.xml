<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window type="window">
	<include>dialogeffect</include>
	<depth>DepthDialog+</depth>
    <defaultcontrol always="true">32500</defaultcontrol>
    <controls>
		<control type="group">
			<control type="group">
				<control type="image">
					<description>background image</description>
					<left>140</left>
					<top>10</top>
					<width>1000</width>
					<height>687</height>
					<texture border="40">$VAR[SelectBack]</texture>
				</control>
				<control type="panel" id="32500">
					<left>155</left>
					<top>25</top>
					<width>970</width>
					<height>659</height>
					<onup>32501</onup>
					<ondown>32500</ondown>
					<onright>61</onright>
					<pagecontrol>61</pagecontrol>
					<orientation>vertical</orientation>
					<scrolltime>200</scrolltime>
					<animation effect="slide" start="0,0" end="10,0" time="0" condition="!Control.IsVisible(61)">Conditional</animation>
					<itemlayout height="219" width="319">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>319</width>
							<height>219</height>
							<texture border="5">button-nofocus.png</texture>
						</control>
						<control type="image">
							<left>70</left>
							<top>20</top>
							<width>180</width>
							<height>180</height>
							<texture>$INFO[ListItem.Property(thumb)]</texture>
						</control>
					</itemlayout>
					<focusedlayout height="219" width="319">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>319</width>
							<height>219</height>
							<texture border="5">button-nofocus.png</texture>
							<visible>!Control.HasFocus(32500)</visible>
							<include>VisibleFadeEffect</include>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>319</width>
							<height>219</height>
							<texture border="5">button-focus2.png</texture>
							<visible>Control.HasFocus(32500)</visible>
							<include>VisibleFadeEffect</include>
						</control>
						<control type="image">
							<left>70</left>
							<top>20</top>
							<width>180</width>
							<height>180</height>
							<texture>$INFO[ListItem.Property(thumb)]</texture>
						</control>
					</focusedlayout>
			</control>
			<control type="scrollbar" id="61">
				<left>985</left>
				<top>20</top>
				<width>25</width>
				<height>670</height>
				<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onleft>32500</onleft>
				<onright>32500</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<visible>IsEmpty(Window(home).Property(loading))</visible>
				<showonepage>true</showonepage>
				<orientation>vertical</orientation>
				<animation effect="slide" end="120,0" time="0" condition="!Control.IsVisible(5)">Conditional</animation>
			</control>
			</control>
		</control>
		<!--Busy control-->
		<control type="image" id="32540">
			<description>Busy animation</description>
			<posx>450</posx>
			<posy>270</posy>
			<width>150</width>
			<height>150</height>
			<texture></texture>
			<aspectratio>keep</aspectratio>
			<animation effect="rotate" start="0" end="360" center="525,345" time="1200" loop="true" condition="true">conditional</animation>
			<visible>!IsEmpty(Window(home).Property(loading))</visible>
		</control>
		<control type="label">
			<top>300</top>
			<left>400</left>
			<width>650</width>
			<height>90</height>
			<font>font35_title</font>
			<textcolor>FFF0F0F0</textcolor>
			<aligny>center</aligny>
			<align>center</align>
			<label>$ADDON[script.matchcenter 32016]</label>
			<visible>!IsEmpty(Window(home).Property(loading))</visible>
		</control>	
		<control type="button" id="32501">
			<description>Close Window button</description>
			<left>1050</left>
			<top>15</top>
			<width>64</width>
			<height>32</height>
			<label>-</label>
			<font>-</font>
			<onclick>PreviousMenu</onclick>
			<texturefocus>DialogCloseButton-focus.png</texturefocus>
			<texturenofocus>DialogCloseButton.png</texturenofocus>
			<onleft>32500</onleft>
			<onright>32500</onright>
			<onup>32500</onup>
			<ondown>32500</ondown>
			<animation effect="slide" end="-120,0" time="0" condition="Window.Close">Conditional</animation>
			<visible>system.getbool(input.enablemouse)</visible>
		</control>
   </controls>
</window>
