<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window type="window">
	<include>dialogeffect</include>
	<depth>DepthDialog+</depth>
	<defaultcontrol always="true">32500</defaultcontrol>
    <controls>
		<control type="group">
			<control type="group">
				<control type="image">
					<description>background image</description>
					<left>140</left>
					<top>200</top>
					<width>1000</width>
					<height>250</height>
					<texture border="40">dialogs/default/bg.png</texture>
				</control>
				<control type="list" id="32500">
					<left>27</left>
					<top>215</top>
					<width>970</width>
					<height>220</height>
					<onup>32501</onup>
					<ondown>32501</ondown>
					<orientation>horizontal</orientation>
					<scrolltime>200</scrolltime>
					<animation effect="slide" start="0,0" end="10,0" time="0" condition="!Control.IsVisible(61)">Conditional</animation>
					<animation effect="slide" end="120,0" time="0" condition="!Control.IsVisible(5)">Conditional</animation>
					<itemlayout height="220" width="322">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>322</width>
							<height>220</height>
							<texture border="1">separator2.png</texture>
						</control>
						<control type="image">
							<left>70</left>
							<top>0</top>
							<width>180</width>
							<height>180</height>
							<texture>$INFO[ListItem.Property(thumb)]</texture>
						</control>
						<control type="label">
							<top>140</top>
							<left>30</left>
							<width>250</width>
							<height>90</height>
							<font>font30_title</font>
							<textcolor>grey2</textcolor>
							<aligny>center</aligny>
							<align>center</align>
							<label>$INFO[ListItem.Label]</label>
							<include>VisibleFadeEffect</include>
						</control>
					</itemlayout>
					<focusedlayout height="220" width="322">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>322</width>
							<height>220</height>
							<texture border="1">separator2.png</texture>
							<visible>!Control.HasFocus(32500)</visible>
							<include>VisibleFadeEffect</include>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>322</width>
							<height>220</height>
							<texture border="5">listselect_fo.png</texture>
							<visible>Control.HasFocus(32500)</visible>
							<include>VisibleFadeEffect</include>
						</control>
						<control type="image">
							<left>70</left>
							<top>0</top>
							<width>180</width>
							<height>180</height>
							<texture>$INFO[ListItem.Property(thumb)]</texture>
						</control>
						<control type="label">
							<top>140</top>
							<left>30</left>
							<width>250</width>
							<height>90</height>
							<font>font30_title</font>
							<textcolor>white</textcolor>
							<aligny>center</aligny>
							<align>center</align>
							<label>$INFO[ListItem.Label]</label>
							<include>VisibleFadeEffect</include>
						</control>	
					</focusedlayout>
			</control>
			</control>
		</control>
		<control type="button" id="32501">
			<description>Close Window button</description>
			<left>1065</left>
			<top>205</top>
			<width>64</width>
			<height>32</height>
			<label>-</label>
			<font>-</font>
			<onclick>PreviousMenu</onclick>
			<texturefocus>DialogCloseButton-focus.png</texturefocus>
			<texturenofocus>DialogCloseButton.png</texturenofocus>
			<onleft>32500</onleft>
			<onright>32500</onright>
			<onup>32500</onup>
			<ondown>32500</ondown>
			<animation effect="slide" end="-120,0" time="0" condition="Window.Close">Conditional</animation>
			<visible>system.getbool(input.enablemouse)</visible>
		</control>
   </controls>
</window>
